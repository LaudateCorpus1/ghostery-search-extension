{
  "version": "0.0.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "search@ghostery.com"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "name": "Ghostery Search",
  "permissions": ["cookies", "https://www.ghostery.com/*", "https://ghosterysearch.com/*"],
  "chrome_settings_overrides" : {
    "search_provider": {
      "name": "Ghostery Search",
      "search_url": "https://ghosterysearch.com/search?q={searchTerms}",
      "keyword": "Ghostery",
      "favicon_url": "https://ghosterysearch.com/img/favicon-32x32.png",
      "is_default": true
    }
  }
}
